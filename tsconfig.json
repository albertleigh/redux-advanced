{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "acceptance-tests",
    "./src/**/__mocks__/",
    "./src/**/__tests__/",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts"
  ]
}
